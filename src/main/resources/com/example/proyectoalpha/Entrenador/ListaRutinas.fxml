<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.proyectoalpha.controller.Entrenador.ListaRutinasController"
           style="-fx-background-color: #000000;">
    <children>
        <VBox alignment="CENTER" spacing="20.0">
            <!-- Título -->
            <Label text="Listado de Rutinas"
                   style="-fx-text-fill: gold; -fx-font-size: 20px; -fx-font-weight: bold;" />

            <!-- Lista de rutinas -->
            <ListView fx:id="listViewRutinas"
                      style="-fx-background-color: #000000; -fx-control-inner-background: #000000;"
                      prefWidth="300.0" prefHeight="200.0" />

            <!-- Botón Eliminar -->
            <Button fx:id="btnEliminar" text="Eliminar"
                    style="-fx-background-color: #333333; -fx-text-fill: gold; -fx-font-size: 16px;" />
        </VBox>
    </children>
</StackPane>
