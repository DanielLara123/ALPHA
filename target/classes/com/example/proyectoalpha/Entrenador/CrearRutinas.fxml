<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="665.0" prefWidth="622.0" spacing="10" style="-fx-background-color: black; -fx-padding: 20;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="com.example.proyectoalpha.controller.Entrenador.CrearRutinasController">
   <AnchorPane prefHeight="32.0" prefWidth="0.0" VBox.vgrow="NEVER">
      <children>
         <Button fx:id="BtnVolver" alignment="TOP_LEFT" layoutX="14.0" layoutY="3.0" mnemonicParsing="false" stylesheets="@../../../../css/ModeloAlpha.css" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" />
      </children>
   </AnchorPane>
    <!-- Título -->
    <Label style="-fx-text-fill: gold; -fx-font-size: 24px; -fx-font-weight: bold;" text="CREACIÓN DE RUTINAS" />

    <!-- Campo para el nombre de la rutina -->
    <Label style="-fx-text-fill: gold; -fx-font-size: 16px;" text="Introduce el nombre de la rutina" />
    <TextField fx:id="nombreRutinaField" promptText="Nombre de la rutina" style="-fx-background-color: #000000; -fx-text-fill: gold;" />

    <!-- Lista de días y ejercicios -->
    <ListView fx:id="listViewDias" style="-fx-background-color: #222; -fx-border-color: gold; -fx-border-width: 1;" />

    <!-- Botones para añadir días y crear -->
    <Button onAction="#onAnadirDia" style="-fx-background-color: transparent; -fx-border-color: gold; -fx-text-fill: gold; -fx-padding: 10 20;" text="+ Añadir día" />
    <Button onAction="#onCrearRutina" style="-fx-background-color: gold; -fx-text-fill: black; -fx-padding: 10 20; -fx-font-weight: bold;" text="Crear" />
</VBox>
